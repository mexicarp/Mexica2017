
@{
    ViewBag.Title = "Registrar";
}

<div class="container">
    <div class="row">
        <!-- begin col-6 -->
        <div class="col-md-12">
            <!-- begin panel -->
            <div class="panel panel-inverse" data-sortable-id="form-stuff-1">
                <div class="panel-heading">
                    <div class="panel-heading-btn">
                        <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand"><i class="fa fa-expand"></i></a>
                        <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-success" data-click="panel-reload"><i class="fa fa-repeat"></i></a>
                        <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-warning" data-click="panel-collapse"><i class="fa fa-minus"></i></a>
                        <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-danger" data-click="panel-remove"><i class="fa fa-times"></i></a>
                    </div>
                    <h4 class="panel-title">Relacionar banco con la empresa</h4>
                </div>
                <div class="panel-body">
                    <form action="#" id="frmRelacionarConBanco" class="form-horizontal" method="post">
                        <div class="form-group">
                            <div class="col-md-6">
                                <label>Banco</label>
                                <select name="selecIdBanco" id="selecIdBanco" class="form-control">
                                    <option value=""></option>
                                    @foreach (var item in ViewBag.listaBancos)
                                    {
                                        if (@item.estatus == true)
                                        {
                                            <option value="@item.idBanco" >@item.nombre</option>
                                        }

                                    }
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label>Empresa</label>
                                <select name="selecIdEmpresa" id="selecIdEmpresa" class="form-control">
                                    <option value=""></option>
                                    @foreach (var item in ViewBag.listaEmpresas)
                                    {
                                        if (@item.estatus == 1)
                                        {
                                            <option value="@item.idEmpresa">@item.descripcion</option>
                                        }

                                    }
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12" style="text-align:right;">
                                <button type="button" class="btn btn-sm btn-primary m-r-5 fa fa-save" onclick="btnRelacionarConBanco();"> Registrar</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <!-- end panel -->
        </div>
    </div>
</div>

<script>
    function btnRelacionarConBanco()
    {
        paginaAjax('add-with-callbacks',
            $('#frmRelacionarConBanco').serialize(),

            '@Url.Action("RelacionarConBanco", "Empresa")', 'POST', null, null, false, true);

        $("#txtNegocio").val("");
    }

</script>

