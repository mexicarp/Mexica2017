
@{
    ViewBag.Title = "Consulta";
}

<div class="container">
    <!-- begin row -->
    <div class="row">
        <div class="col-md-12">
            <!-- begin panel -->
            <div class="panel panel-inverse">
                <div class="panel-heading">
                    <h4 class="panel-title">Control Vehicular :: Mexica Tours</h4>
                </div>
                <div class="alert alert-warning fade in">
                    <button type="button" class="close" data-dismiss="alert">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    Consulta de movimientos de control vehicular
                </div>
                <div class="panel-body">
                    <table id="data-table" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Clave Servicio</th>
                                <th>Destino</th>
                                <th>Fecha Salida</th>
                                <th>Hora</th>
                                <th>Fecha Entrada</th>
                                <th>Hora</th>
                                <th>Situacion</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in ViewBag.listaControlVehicular)
                            {
                                <tr class="odd gradeX">

                                    <td><a href="#" onclick="modificar('@item.idControl')">@item.idControl </a></td>
                                    <td>@item.claveServicio</td>
                                    <td>@item.destino</td>
                                    <td>@item.fechaSalida</td>
                                    <td>@item.horaSalida</td>
                                    <td>@item.fechaEntrada</td>
                                    <td>@item.horaEntrada</td>
                                    <td>@item.estatus</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<script>


    function modificar(idControl)
    {
            //return window.location.href='{{url("hotel/modificar")}}/'+id_hotel;
        window.location.href = '@Url.Action("Modificar", "controlVehicular")' + '/' + idControl;
    }
</script>
