
@{
    ViewBag.Title = "Registrar";
}

<div class="container">
<div class="row">
    <!-- begin col-6 -->
    <div class="col-md-12">
        <!-- begin panel -->
        <div class="panel panel-inverse" data-sortable-id="form-stuff-1">
            <div class="panel-heading">
                <div class="panel-heading-btn">
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand"><i class="fa fa-expand"></i></a>
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-success" data-click="panel-reload"><i class="fa fa-repeat"></i></a>
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-warning" data-click="panel-collapse"><i class="fa fa-minus"></i></a>
                    
                </div>
                <h4 class="panel-title">Registro de cuenta Bancaria</h4>
            </div>
            <div class="panel-body">
                <form action="" id="frmRegistrarCuenta" class="form-horizontal" method="post">
                    <div class="row">
                        <div class="col-md-4">
                            <label>Banco</label>
                            <select name="selectIdBanco" id="selectIdBanco" class="form-control" onchange="paginaAjax('selectNegocio', { id : this.value }, '@Url.Action("VerPorIdBancoConAjaxParaCuenta", "Negocio")', 'POST', null, null, false, true);">
                                <option value=""></option>
                                @foreach (var item in ViewBag.listasBancos)
                                {
                                    <option value="@item.idBanco">@item.nombre</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label>Negocio</label>
                            <select name="selectNegocio" id="selectNegocio" class="form-control input-sm" data-size="10" data-live-search="true" data-style="btn-default">

                            </select>
                        </div>
                        <div class="col-md-4">
                            <label>No. Cuenta</label>
                            <input type="text" id="txtNumeroCuenta" name="txtNumeroCuenta" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-4">
                            <label>Saldo Inicial</label>
                            <div class="input-group">
                                <span class="input-group-addon">$</span>
                                <input type="text" id="txtSaldoInicial" name="txtSaldoInicial" class="form-control" />
                                <span class="input-group-addon">.00</span>
                            </div>
                        </div>
                            <div class="col-md-4">
                                <label>Referencia</label>
                                <div class="row row-space-10">
                                    <input type="text" id="txtReferencia" name="txtReferencia" class="form-control" />
                                </div>
                            </div>
                        <div class="col-md-4">
                            <label>Fecha</label>
                            <div class="row row-space-10">
                                <input type="date" id="txtFecha" name="txtFecha" class="form-control" />
                            </div>
                        </div>
                        </div>
                    <div class="row">
                        <div class="col-md-10">
                            <label>Obsservacion</label>
                            <textarea class="form-control" id="txtObservacion" name="txtObservacion" rows="5"></textarea>
                        </div>
                            <div class="col-md-2">
                                <label>Estatus</label>
                                <select name="selectEstatus" id="selectEstatus" class="form-control">
                                    <option value=""></option>
                                    <option value="1">Activo</option>
                                    <option value="0">Inactivo</option>
                                </select>
                            </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12" style="text-align:right;">
                            <button type="button" class="btn btn-sm btn-primary fa fa-save" onclick="registrarCuenta();"> Guardar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <!-- end panel -->
    </div>
</div>
</div>

<script>
    function registrarCuenta()
    {
        paginaAjax('add-with-callbacks',
            $('#frmRegistrarCuenta').serialize(),

            '@Url.Action("Registrar", "Cuenta")', 'POST', null, null, false, true);

        $("#selectIdBanco").val("");
        $("#selectIdnegocio").val("");
        $("#txtNumeroCuenta").val("");
        $("#txtSaldoInicial").val("");
        $("#txtReferencia").val("");
        $("#txtFecha").val("");
        $("#txtObservacion").val("");
        $("#selectEstatus").val("");
    }
</script>