
@{
    ViewBag.Title = "Ver";
}

<div class="row">
        <!-- begin col-10 -->
            <div class="col-md-12">
                <!-- begin panel -->
                <div class="panel panel-inverse">
                    <div class="panel-heading">
                        <div class="panel-heading-btn">
                            <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand"><i class="fa fa-expand"></i></a>
                            <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-success" data-click="panel-reload"><i class="fa fa-repeat"></i></a>
                            <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-warning" data-click="panel-collapse"><i class="fa fa-minus"></i></a>
                        </div>
                        <h4 class="panel-title">Lista de negocios por bancos</h4>
                    </div>
                    <div class="panel-body">
                            <div class="row">
                                <div class="col-md-3">
                                    <label class="col-md-3">Banco</label>
                                    <select name="selecIdBanco" id="selecIdBanco" class="form-control" data-size="10" onchange="paginaAjax('selectNegocio', { id : this.value }, '@Url.Action("VerPorIdBancoConAjaxParaCuenta", "Negocio")', 'POST', null, null, false, true);">
                                        <option value="">Seleccione un Banco</option>
                                        @foreach (var item in ViewBag.listasBancos)
                                        {
                                            if (@item.estatus == true)
                                            {
                                                <option value="@item.idBanco">@item.nombre</option>
                                            }

                                        }
                                    </select>
                                    </div>
                                    <div class="col-md-3">
                                    <label class="col-md-3">Negocio</label>
                                    <select name="selectNegocio" id="selectNegocio" class="form-control" data-size="10" onchange="paginaAjax('body-data-table', { id : this.value }, '@Url.Action("ListarCuentasPorNegocioConAjax", "Cuenta")', 'POST', null, null, false, true);">
                                       
                                    </select>
                                </div>
                                </div>
                             <br />
                            <table id="data-table" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>No. Cuenta</th>
                                        <th style="text-align:center;">Saldo Inicial</th>
                                        <th style="text-align:center;">Saldo Actual</th>
                                        <th style="text-align:center;">Estatus</th>
                                        <th style="text-align:center;">Acciones</th>
                                    </tr>
                                </thead>
                                <tbody id="body-data-table">
                                   
                                </tbody>
                            </table>
                        </div>
                </div>
                <!-- end panel -->
            </div>
            <!-- end col-10 -->
        </div>
<!-- #modal-dialog -->
<div class="modal fade" id="modal-dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title">Formulario de modificar</h4>
            </div>
            <div class="modal-body">
                <input type="text" id="txtNombreBanco" name="txtNombreBanco" class="form-control" value="idBanco" />
            </div>
            <div class="modal-footer">
                <a href="javascript:;" class="btn btn-sm btn-white" data-dismiss="modal">Cancelar</a>
                <a href="javascript:;" class="btn btn-sm btn-success">Actualizar</a>
            </div>
        </div>
    </div>
</div>
<!-- #modal-without-animation -->

<script>
    function CuentaModificar(idCuenta) {
        window.location.href = '@Url.Action("Modificar", "Cuenta")' + '/' + idCuenta;
        }

</script>


