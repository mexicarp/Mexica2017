
@{
    ViewBag.Title = "Consulta";
}

<div class="container">
    <!-- begin row -->
    <div class="row">
        <div class="col-md-12">
            <!-- begin panel -->
            <div class="panel panel-inverse">
                <div class="panel-heading">
                    <h4 class="panel-title">Listado de Personal :: Mexica Tours</h4>
                </div>
                <div class="alert alert-warning fade in">
                    <button type="button" class="close" data-dismiss="alert">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    Listado de personal del corporativo MexicaTours, seleccione el Id para modificar la información del empleado.
                </div>
                <div class="panel-body">
                    <table id="data-table" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Empresa</th>
                                <th>Empleado</th>
                                <th>Fecha Nacimiento</th>
                                <th>Sexo</th>
                                <th>Telefono</th>
                                <th>Correo Electronico</th>
                                <th>Estatus</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in ViewBag.listaEmpleados)
                            {
                                <tr class="odd gradeX">

                                    <td><a href="#" onclick="modificar('@item.idEmpleado')">@item.idEmpleado </a></td>
                                    <td>@item.parentcatEmpresas.descripcion</td>
                                    <td>@item.paterno @item.materno @item.nombre</td>
                                    <td>@item.fechaNacimiento</td>
                                    <td>@Html.Raw(item.sexo == "H" ? "Hombre" : "Mujer") </td>
                                    <td>@item.telefono</td>
                                    <td>@item.email</td>
                                    <td>@Html.Raw(item.estatus == 1 ? "Activo" : "Inactivo") </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<script>


    function modificar(idEmpleado)
    {
            //return window.location.href='{{url("hotel/modificar")}}/'+id_hotel;
        window.location.href = '@Url.Action("Modificar", "Empleado")' + '/' + idEmpleado;
    }
</script>
