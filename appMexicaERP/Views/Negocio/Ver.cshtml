
@{
    ViewBag.Title = "Ver";
}

<div class="container">
    <div class="panel panel-inverse">
        
    </div>

    <div class="row">
        <!-- begin col-10 -->
            <div class="col-md-12">
                <!-- begin panel -->
                <div class="panel panel-inverse">
                    <div class="panel-heading">
                        <div class="panel-heading-btn">
                            <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand"><i class="fa fa-expand"></i></a>
                            <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-success" data-click="panel-reload"><i class="fa fa-repeat"></i></a>
                            <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-warning" data-click="panel-collapse"><i class="fa fa-minus"></i></a>
                        </div>
                        <h4 class="panel-title">Lista de negocios por bancos</h4>
                    </div>
                    <div class="panel-body">
                        <div class="col-md-3">
                            <label class="">Banco</label>
                            <select name="selecIdBanco" id="selecIdBanco" class="form-control" data-size="10" onchange="paginaAjax('body-data-table', {id: this.value}, '@Url.Action("ListarNegociosPorBancoConAjax", "Negocio")', 'POST', null, null, false, true);">
                                <option value="">Seleccione</option>
                                @foreach (var item in ViewBag.listaBancos)
                                {
                                    if (@item.estatus == true)
                                    {
                                        <option value="@item.idBanco">@item.nombre</option>
                                    }

                                }
                            </select>
                            </div>
                            <br /><br /><br /><br />
                            <table id="data-table" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>Banco</th>
                                        <th>Negocio</th>
                                        <th>Fecha Registro</th>
                                        <th>Fecha Modificación</th>
                                        <th>Estatus</th>
                                        <th>Opciones</th>
                                    </tr>
                                </thead>
                                <tbody id="body-data-table">
                                   
                                </tbody>
                            </table>
                        </div>
                </div>
                <!-- end panel -->
            </div>
            <!-- end col-10 -->
        </div>

</div>

<script>
    function negocioModificar(idNegocio) {
        window.location.href = '@Url.Action("Modificar", "Negocio")' + '/' + idNegocio;
        }

</script>


