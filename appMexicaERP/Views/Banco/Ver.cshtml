
@{
    ViewBag.Title = "Ver";
}

<div class="container">
    <div class="row">
        <!-- begin col-10 -->
        <div class="col-md-12">
            <!-- begin panel -->
            <div class="panel panel-inverse">
                <div class="panel-heading">
                    <div class="panel-heading-btn">
                        <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand"><i class="fa fa-expand"></i></a>
                        <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-success" data-click="panel-reload"><i class="fa fa-repeat"></i></a>
                        <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-warning" data-click="panel-collapse"><i class="fa fa-minus"></i></a>
   
                    </div>
                    <h4 class="panel-title">Lista de movimientos</h4>
                </div>
                <!--<div class="alert alert-warning fade in">
                    <button type="button" class="close" data-dismiss="alert">
                        <span aria-hidden="true">&times;</span>
                    </button>
                   The Buttons extension for DataTables provides a common set of options, API methods and styling to display buttons on a page that will interact with a DataTable. The core library provides the based framework upon which plug-ins can built.
                </div>-->
                <div class="panel-body">
                    <table id="data-table" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Banco</th>
                                <th>Fecha Registro</th>
                                <th>Fecha Modificación</th>
                                <th>Estatus</th>
                                <th>Opciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in ViewBag.listasBancos)
                            {

                                <tr>
                                    <td>@item.nombre</td>
                                    <td>@item.fechaRegistro</td>
                                    <td>@item.fechaModificacion</td>
                                    <td align="center">@Html.Raw(item.estatus == true ? "<span style='background-color:green; color:white; padding:4px; border-radius:3px;'>Activo</span>" : "<span style='background-color:red; color:white; padding:4px; border-radius:3px;'>Inactivo</span>")</td>
                                    <td align="center">
                                        <a class="btn btn-primary btn-icon btn-circle" data-click="Modificar" href="#" onclick="ModificarBanco('@item.idBanco');"><i class="fa fa-pencil"></i></a> | <a class="btn btn-danger btn-icon btn-circle" data-click="Modificar" href="#" onclick="EliminarBanco('@item.idBanco');"><i class="fa fa-warning"></i></a>
                                        @*<a href="#modal-dialog" class="btn btn-sm btn-success" data-toggle="modal" onclick="seleccionarEstatusBanco('@item.idBanco', '@item.nombre', '@(item.estatus ? "true" : "false")');">Modificar</a>*@
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- end panel -->
        </div>
        <!-- end col-10 -->
    </div>

    <!-- #modal-dialog -->
    <div class="modal fade" id="modal-dialog">
        <form id="frmEditarBanco">
            <input type="hidden" id="txtIdBanco" name="txtIdBanco" value="" class="form-control" />
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                        <h4 class="modal-title">Modificar Banco</h4>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <label class="control-label col-md-4">Nombre de Banco</label>
                            <div class="col-md-8">
                                <div class="row row-space-10">
                                    <input type="text" id="txtNombreBanco" name="txtNombreBanco" value="" class="form-control" />

                                </div>
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <label class="control-label col-md-4">Estatus</label>
                            <div class="col-md-2">
                                <select name="selectEstatus" id="selectEstatus" class="form-control selectpicker" data-size="10" data-live-search="true" data-style="btn-warning">
                                    <option value="1">Activo</option>
                                    <option value="0">Inactivo</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <a href="javascript:;" class="btn btn-sm btn-white" data-dismiss="modal">Cancelar</a>
                        <a href="javascript:;" class="btn btn-sm btn-success" data-dismiss="modal" onclick="actualizarBanco();">Actualizar</a>
                    </div>
                </div>
            </div>
        </form>
    </div>

</div>

<script>
    function ModificarBanco(idBanco)
    {
        window.location.href = '@Url.Action("Modificar", "Banco")' + '/' + idBanco;
    }

    function EliminarBanco(idBanco)
    {
        if(confirm('Confirmar operación'))
        {
            return window.location.href = '@Url.Action("Eliminar", "Banco")' + '/' + idBanco;
        }
    }

    function seleccionarEstatusBanco(idBanco, nombre, estatus) {

        $('#txtIdBanco').val(idBanco);
        $('#txtNombreBanco').val(nombre);

    }

    function actualizarBanco() {
        paginaAjax('add-with-callbacks',
            $('#frmEditarBanco').serialize(),

            '@Url.Action("Modificar", "Banco")', 'POST', null, null, false, true);
    }

</script>

