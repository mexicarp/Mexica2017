    <meta content="" name="author" />

    <!-- ================== BEGIN BASE CSS STYLE ================== -->
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" rel="stylesheet">
    <link href="~/Content/FechaHora/bootstrap-datetimepicker.min.css" rel="stylesheet" />
    <link href="~/Content/template/assets/plugins/jquery-ui/themes/base/minified/jquery-ui.min.css" rel="stylesheet" />
    <link href="~/Content/template/assets/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/template/assets/plugins/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/template/assets/css/animate.min.css" rel="stylesheet" />
    <link href="~/Content/template/assets/css/style.min.css" rel="stylesheet" />
    <link href="~/Content/template/assets/css/style-responsive.min.css" rel="stylesheet" />
    <link href="~/Content/template/assets/css/theme/default.css" rel="stylesheet" />
    <!-- ================== END BASE CSS STYLE ================== -->
    <!-- ================== BEGIN BASE JS ================== -->
    <script src="~/Content/template/assets/plugins/pace/pace.min.js"></script>
    <!-- ================== END BASE JS ================== -->
</head>
<body class="pace-top bg-white">
    <div id="mensajeGlobal"><div>x</div><div></div></div>
    <!-- begin #page-loader -->
    <div id="page-loader" class="fade in"><span class="spinner"></span></div>
    <!-- end #page-loader -->
    <!-- begin #page-container -->
    <div id="page-container" class="fade">
        <!-- begin register -->
        <div class="register register-with-news-feed">
            <!-- begin news-feed -->
            <div class="news-feed">
                <div class="news-image">
                    <img src="~/Content/template/assets/img/login-bg/cancun-1.jpg" alt="" />
                </div>
                <div class="news-caption">
                    <h4 class="caption-title"><i class="fa fa-edit text-success"></i> Mexica Tours: ¡Viaja, Conoce y Disfruta!</h4>
                    <p>
                       
                    </p>
                </div>
            </div>
            <!-- end news-feed -->
            <!-- begin right-content -->
            <div class="right-content">
                <!-- begin register-header -->
                <h1 class="register-header">
                    Regístrate
                    <small>Crea tu cuenta para acceder al sistema</small>
                </h1>
                <!-- end register-header -->
                <!-- begin register-content -->
                <div class="register-content">
                    <form action="@Url.Action("Registrar", "Usuario")" method="POST" class="margin-bottom-0">
                        <input type="hidden" id="txtIdUsuario" name="txtIdUsuario" size="40" value="@ViewBag.datosUsuario.idUsuario">
                        <label class="control-label">Nombre Completo</label>
                        <div class="row row-space-10">
                            <div class="col-md-6 m-b-15">
                                <input type="text" class="form-control" id="txtNombre" name="txtNombre" placeholder="Nombre" />
                            </div>
                            <div class="col-md-6 m-b-15">
                                <input type="text" class="form-control" id="txtApellidos" name="txtApellidos" placeholder="Apellidos" />
                            </div>
                        </div>
                        <label class="control-label">Email</label>
                        <div class="row m-b-15">
                            <div class="col-md-12">
                                <input type="text" class="form-control" id="txtCorreoElectronico" name="txtCorreoElectronico" placeholder="Correo Electrónico" />
                            </div>
                        </div>
                        <label class="control-label">Escriba el código recibido por Email</label>
                        <div class="row m-b-15">
                            <div class="col-md-12">
                                <input type="text" class="form-control" id="txtCodigoVerificacion" name="txtCodigoVerificacion" value="" placeholder="Escriba el códdigo recibido" />
                            </div>
                        </div>
                        <label class="control-label">Password</label>
                        <div class="row m-b-15">
                            <div class="col-md-12">
                                <input type="password" class="form-control"  id="txtPassword" name="txtPassword" placeholder="Password" />
                            </div>
                        </div>
                        <label class="control-label">Confirme su Password</label>
                        <div class="row m-b-15">
                            <div class="col-md-12">
                                <input type="password" class="form-control" placeholder="Password" />
                            </div>
                        </div>


                        <div class="checkbox m-b-30">
                            <label>
                                <input type="checkbox" /> Al hacer clic en Registrarse, acepta nuestros <a href="#">Terminos</a> y
                                ha leído nuestra <a href="#">Política de datos</a>,  incluido el uso de<a href="#">cookie</a>.
                            </label>
                        </div>
                        <div class="register-buttons">
                            <button type="submit" class="btn btn-primary btn-block btn-lg">Regístrarme</button>
                        </div>
                        <div class="m-t-20 m-b-40 p-b-40">
                            ¿Ya eres usuario? Haga <a href="login_v3.html">clic aquí</a> para ingresar al sistema.
                        </div>
                        <hr />
                        <p class="text-center text-inverse">
                            &copy; Mexica Tours 2017
                        </p>
                    </form>
                </div>
                <!-- end register-content -->
            </div>
            <!-- end right-content -->
        </div>
        <!-- end register -->
        <!-- begin theme-panel -->
        
        <!-- end theme-panel -->
    </div>
    <!-- end page container -->
    <!-- ================== BEGIN BASE JS ================== -->
    <script src="~/Content/template/assets/plugins/jquery/jquery-1.9.1.min.js"></script>
    <script src="~/Content/template/assets/plugins/jquery/jquery-migrate-1.1.0.min.js"></script>
    <script src="~/Content/template/assets/plugins/jquery-ui/ui/minified/jquery-ui.min.js"></script>
    <script src="~/Content/template/assets/plugins/bootstrap/js/bootstrap.min.js"></script>
    <!--[if lt IE 9]>
        <script src="assets/crossbrowserjs/html5shiv.js"></script>
        <script src="assets/crossbrowserjs/respond.min.js"></script>
