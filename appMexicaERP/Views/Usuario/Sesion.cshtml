
@{
    Layout = null;
}

<!DOCTYPE html>
<!--[if IE 8]> <html lang="en" class="ie8"> <![endif]-->
<!--[if !IE]><!-->
<html lang="en">
<!--<![endif]-->
<head>
    <meta charset="utf-8" />
    <title>Login</title>
    <meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" name="viewport" />
    <meta content="" name="description" />
    <meta content="" name="author" />

    <!-- ================== BEGIN BASE CSS STYLE ================== -->
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" rel="stylesheet">
    <link href="~/Content/FechaHora/bootstrap-datetimepicker.min.css" rel="stylesheet" />
    <link href="~/Content/template/assets/plugins/jquery-ui/themes/base/minified/jquery-ui.min.css" rel="stylesheet" />
    <link href="~/Content/template/assets/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/template/assets/plugins/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/template/assets/css/animate.min.css" rel="stylesheet" />
    <link href="~/Content/template/assets/css/style.min.css" rel="stylesheet" />
    <link href="~/Content/template/assets/css/style-responsive.min.css" rel="stylesheet" />
    <link href="~/Content/template/assets/css/theme/default.css" rel="stylesheet" />

    <link href="~/Content/miCodigos/css/ccsMensajeGlobal.css" rel="stylesheet" />

    <!-- ================== END BASE CSS STYLE ================== -->
    <!-- ================== BEGIN BASE JS ================== -->
    <script src="~/Content/template/assets/plugins/pace/pace.min.js"></script>
    <!-- ================== END BASE JS ================== -->

    <script src="~/Content/template/assets/plugins/jquery/jquery-1.9.1.min.js"></script>
    <script src="~/Content/miCodigos/js/jsMensajeGlobal.js"></script>
</head>
<body class="pace-top">
    <!-- begin #page-loader -->
    <div id="page-loader" class="fade in"><span class="spinner"></span></div>
    <!-- end #page-loader -->

    <div class="login-cover">
        <div class="login-cover-image"><img src="~/Content/template/assets/img/login-bg/Fondo_06.jpg" data-id="login-cover-image" alt="" /></div>
        <div class="login-cover-bg"></div>
    </div>
    <!-- begin #page-container -->
    <div id="page-container" class="fade">
        <!-- begin login -->
        <div class="login login-v2" data-pageload-addclass="animated fadeIn">
            <!-- begin brand -->
            <div class="login-header">
                <div class="brand">
                    <img src="http://mexicatours.com/wp-content/uploads/2016/12/logo.png" style="width:100px;" alt="Alternate Text" />Contabilidad
                    <small>Sistema de Contabilidad</small>
                </div>
                <div class="icon">
                    <i class="fa fa-sign-in"></i>
                </div>
            </div>
            <!-- end brand -->
            <div class="login-content">
                <div id="mensajeGlobal"><div id="mensajeGlobalCerrar"><div onclick="cerrarMensajeGlobal();">x</div></div><div id="mensajeGlobalContenido"></div></div>
                @if (@ViewBag.mensajeGlobal != null || @TempData["mensajeGlobal"] != null)
                {
                    <script>mostrarMensajeGlobal('@Html.Raw(ViewBag.mensajeGlobal!=null ? ViewBag.mensajeGlobal : TempData["mensajeGlobal"])', '@(ViewBag.color!=null ? ViewBag.color : TempData["color"])');</script>
                }
                <form action="@Url.Action("Sesion", "Usuario")" method="POST" class="margin-bottom-0">
                    <div class="form-group m-b-20">
                        <input type="text" class="form-control input-lg" id="txtCorreoElectronicoTemporal" name="txtCorreoElectronicoTemporal" placeholder="Correo Electrónico" />
                    </div>
                    <div class="form-group m-b-20">
                        <input type="password" class="form-control input-lg"id="txtContraseniaTemporal" name="txtContraseniaTemporal" placeholder="Password" />
                    </div>
                    <div class="checkbox m-b-20">
                        <label>
                            <input type="checkbox" />Recordar Password
                        </label>
                    </div>
                    <div class="login-buttons">
                        <button type="submit" class="btn btn-success btn-block btn-lg">Entrar</button>
                    </div>
                    <!--<div class="m-t-20">
                        Not a member yet? Click <a href="#">here</a> to register.
                    </div>-->
                </form>
            </div>
        </div>
        <!-- end login -->

        <ul class="login-bg-list">
            <li class="active"><a href="#" data-click="change-bg"><img src="~/Content/template/assets/img/login-bg/Fondo_06.jpg" alt="" /></a></li>
            <li><a href="#" data-click="change-bg"><img src="~/Content/template/assets/img/login-bg/Fondo_02.jpg" alt="" /></a></li>
            <li><a href="#" data-click="change-bg"><img src="~/Content/template/assets/img/login-bg/Fondo_03.jpg" alt="" /></a></li>
            <li><a href="#" data-click="change-bg"><img src="~/Content/template/assets/img/login-bg/Fondo_04.jpg" alt="" /></a></li>
            <li><a href="#" data-click="change-bg"><img src="~/Content/template/assets/img/login-bg/Fondo_05.jpg" alt="" /></a></li>
            <li><a href="#" data-click="change-bg"><img src="~/Content/template/assets/img/login-bg/Fondo_06.jpg" alt="" /></a></li>
        </ul>
    </div>
    <!-- end page container -->
    <!-- ================== BEGIN BASE JS ================== -->
    <script src="~/Content/template/assets/plugins/jquery/jquery-migrate-1.1.0.min.js"></script>
    <script src="~/Content/template/assets/plugins/jquery-ui/ui/minified/jquery-ui.min.js"></script>
    <script src="~/Content/template/assets/plugins/bootstrap/js/bootstrap.min.js"></script>
    <!--[if lt IE 9]>
        <script src="assets/crossbrowserjs/html5shiv.js"></script>
        <script src="assets/crossbrowserjs/respond.min.js"></script>
        <script src="assets/crossbrowserjs/excanvas.min.js"></script>
    <![endif]-->
    <script src="~/Content/template/assets/plugins/slimscroll/jquery.slimscroll.min.js"></script>
    <script src="~/Content/template/assets/plugins/jquery-cookie/jquery.cookie.js"></script>
    <!-- ================== END BASE JS ================== -->
    <!-- ================== BEGIN PAGE LEVEL JS ================== -->
    <script src="~/Content/template/assets/js/login-v2.demo.min.js"></script>
    <script src="~/Content/template/assets/js/apps.min.js"></script>
    <!-- ================== END PAGE LEVEL JS ================== -->

    <script>
		$(document).ready(function() {
			App.init();
			LoginV2.init();
		});
    </script>
</body>
</html>
