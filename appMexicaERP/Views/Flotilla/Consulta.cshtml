
@{
    ViewBag.Title = "Consulta";
}

<div class="container">
    <!-- begin row -->
    <div class="row">
        <div class="col-md-12">
            <!-- begin panel -->
            <div class="panel panel-inverse">
                <div class="panel-heading">
                    <div class="panel-heading-btn">
                        <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand"><i class="fa fa-expand"></i></a>
                        <a href="@Url.Action("Registrar", "Flotilla")" class="btn btn-xs btn-icon btn-circle btn-success"><i class="fa fa-repeat"></i></a>
                    </div>
                    <h4 class="panel-title">Listado de Vehiculos</h4>
                </div>

                <div class="panel-body">
                    <table id="data-table" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>N° Economico</th>
                                <th>Tipo</th>
                                <th>Aseguradora</th>
                                <th>Operador Asignado</th>
                                <th>Empresa</th>
                                <th>Estatus</th>
                                <th>Accion</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in ViewBag.listaFlotilla)
                            {
                                <tr class="odd gradeX">

                                    <td><a href="#" onclick="modificar('@item.idFlotilla')">@item.idFlotilla </a></td>
                                    <td>@item.numEconomico</td>
                                    <td>@item.tipo</td>
                                    <td>@item.ciaSeguro</td>
                                    <td>@item.parentEmpleados.nombre @item.parentEmpleados.paterno @item.parentEmpleados.materno</td>
                                    <td>@item.parentEmpresas.descripcion</td>
                                    <td>@Html.Raw(item.estatus == 1 ? "Activo" : "Inactivo") </td>
                                    <td>
                                        <a class="btn btn-primary btn-icon btn-circle" data-click="Modificar" href="#" onclick="modificar('@item.idFlotilla')"><i class="fa fa-pencil"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<script>


    function modificar(idFlotilla)
    {
            //return window.location.href='{{url("hotel/modificar")}}/'+id_hotel;
        window.location.href = '@Url.Action("Modificar", "Flotilla")' + '/' + idFlotilla;
    }
</script>